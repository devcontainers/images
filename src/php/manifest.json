{
	"version": "1.2.12",
	"variants": [
		"8.4-apache-bookworm",
		"8.3-apache-bookworm",
		"8.2-apache-bookworm",
		"8.4-apache-bullseye",
		"8.3-apache-bullseye",
		"8.2-apache-bullseye"
	],
	"build": {
		"latest": "8.4-apache-bookworm",
		"rootDistro": "debian",
		"architectures": {
			"8.4-apache-bookworm": [
				"linux/amd64",
				"linux/arm64"
			],			
			"8.3-apache-bookworm": [
				"linux/amd64",
				"linux/arm64"
			],
			"8.2-apache-bookworm": [
				"linux/amd64",
				"linux/arm64"
			],
			"8.4-apache-bullseye": [
				"linux/amd64",
				"linux/arm64"
			],			
			"8.3-apache-bullseye": [
				"linux/amd64",
				"linux/arm64"
			],
			"8.2-apache-bullseye": [
				"linux/amd64",
				"linux/arm64"
			]
		},
		"tags": [
			"php:${VERSION}-${VARIANT}"
		],
		"variantTags": {
			"8.4-apache-bookworm": [
				"php:${VERSION}-8",
				"php:${VERSION}-8.4",
				"php:${VERSION}-8-bookworm",
				"php:${VERSION}-8.4-bookworm",
				"php:${VERSION}-bookworm"
			],
			"8.3-apache-bookworm": [
				"php:${VERSION}-8.3",
				"php:${VERSION}-8.3-bookworm"
			],			
			"8.2-apache-bookworm": [
				"php:${VERSION}-8.2",
				"php:${VERSION}-8.2-bookworm"
			],
			"8.4-apache-bullseye": [
				"php:${VERSION}-8-bullseye",
				"php:${VERSION}-8.4-bullseye",
				"php:${VERSION}-bullseye"
			],
			"8.3-apache-bullseye": [
				"php:${VERSION}-8.3-bullseye"
			],			
			"8.2-apache-bullseye": [
				"php:${VERSION}-8.2-bullseye"
			]
		}
	},
	"dependencies": {
		"image": "php:${VARIANT}",
		"imageLink": "https://hub.docker.com/_/php",
		"apt": [
			{
				"cgIgnore": false,
				"name": "yarn"
			}
		],
		"git": {
			"Oh My Zsh!": "/home/vscode/.oh-my-zsh",
			"nvm": "/usr/local/share/nvm"
		},
		"other": {
			"git": {},
			"Xdebug": {
				"path": "/usr/local/lib/php/extensions"
			},
			"Composer": {
				"path": "/usr/local"
			}
		},
		"languages": {
			"PHP": {
				"cgIgnore": true,
				"path": "/usr/local"
			}
		}
	}
}
